{
  "cli": {
    "version": ">= 15.0.12",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "env": {
          "KOTLIN_VERSION": "1.7.20"
        }
      }
    },
    "production": {
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "env": {
          "KOTLIN_VERSION": "1.7.20",
          "GRADLE_OPTS": "-Dkotlin.compiler.execution.strategy=in-process -Dkotlin.incremental=false -Dorg.gradle.jvmargs=\"-Xmx4g -XX:+HeapDumpOnOutOfMemoryError -Dfile.encoding=UTF-8\" -Dorg.gradle.parallel=true -Dorg.gradle.daemon=false"
        },
        "buildType": "apk",
        "prebuildCommand": "node fix-android-build.js"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
